<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Imagem do biscoito da sorte -->
    <ImageView
        android:id="@+id/cookieImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cookie_closed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fortuneTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Imagem do biscoito da sorte"/>

    <!-- Frase de sorte -->
    <TextView
        android:id="@+id/fortuneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/cookieImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- BotÃ£o para quebrar o biscoito -->
    <Button
        android:id="@+id/breakCookieButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quebrar Biscoito"
        app:layout_constraintTop_toBottomOf="@id/fortuneTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>